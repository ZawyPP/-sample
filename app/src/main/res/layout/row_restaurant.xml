<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textFontRestaurantTitle"
        android:layout_marginHorizontal="10dp"
        android:text="@string/restaurant_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:alpha="0.8"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/restaurant_text4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        style="@style/textFontRestaurantTitle"
        android:text="@string/restaurant_text1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textFontRestaurant"
        android:layout_marginHorizontal="10dp"
        android:text="text1" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:layout_marginVertical="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/textFontRestaurantTitle"
        android:layout_marginHorizontal="10dp"
        android:text="@string/restaurant_text2" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textFontRestaurant"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:text="text2" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginVertical="25dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/textFontRestaurantTitle"
        android:layout_marginHorizontal="10dp"
        android:text="@string/restaurant_text3" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textFontRestaurant"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:text="text3" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginVertical="25dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textFontRestaurant"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:text="text4" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:visibility="gone"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textFontRestaurant"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:text="text5" />


</LinearLayout>