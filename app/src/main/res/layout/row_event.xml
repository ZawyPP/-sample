<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/eLinearLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/eDate"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/caveat"
            android:text="16.03.2021" />

        <TextView
            android:id="@+id/eKind"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:background="@drawable/background_kind"
            android:paddingHorizontal="4dp"
            android:textAlignment="center"
            android:fontFamily="@font/caveat_brush"
            android:text="SEBAROZVOJ"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/eName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:minLines="2"
                android:textSize="26dp"
                android:fontFamily="@font/caveat_brush"
                android:text="Meno Umelca" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ePriceTextView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="20dp"
                    android:fontFamily="@font/caveat"
                    android:text="@string/price1" />

                <TextView
                    android:id="@+id/ePrice1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"

                    android:textSize="22dp"
                    android:text="8 €"
                    android:paddingEnd="5dp"
                    android:fontFamily="@font/caveat"
                    android:layout_gravity="bottom"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ePriceTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="20dp"
                    android:fontFamily="@font/caveat"
                    android:text="@string/price2" />

                <TextView
                    android:id="@+id/ePrice2"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:text="12 €"
                    android:fontFamily="@font/caveat"
                    android:paddingEnd="5dp"
                    android:layout_gravity="end" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/reservationEvent"
                    android:layout_height="55dp"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ticket"/>


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/eDisable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="34dp"
        android:textAlignment="center"
        android:rotation="15"
        android:textColor="@color/design_default_color_error"
        android:fontFamily="@font/caveat"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:visibility="gone"
        android:text="UDALOSŤ ZRUŠENÁ!" />
</RelativeLayout>


