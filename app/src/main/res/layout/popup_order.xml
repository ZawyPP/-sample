<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_marginHorizontal="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/eDate"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/tabSelectedTextColor"
            android:textSize="18dp"
            android:fontFamily="@font/caveat"
            android:text="16.03.2021" />

        <TextView
            android:id="@+id/eKind"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:background="@drawable/background_kind"
            android:paddingHorizontal="4dp"
            android:textAlignment="center"
            android:fontFamily="@font/caveat_brush"
            android:text="SEBAROZVOJ"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/eName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:minLines="1"
                android:textSize="28dp"
                android:textColor="@color/tabSelectedTextColor"
                android:fontFamily="@font/caveat_brush"
                android:text="Meno Umelca" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ePriceTextView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:fontFamily="@font/caveat"
                    android:textColor="@color/tabSelectedTextColor"
                    android:text="Počet miest : " />

                <TextView
                    android:id="@+id/countOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:textColor="@color/tabSelectedTextColor"
                    android:textSize="24dp"
                    android:text=""
                    android:paddingEnd="5dp"
                    android:fontFamily="@font/caveat"
                    android:layout_gravity="bottom"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18dp"
                    android:textColor="@color/tabSelectedTextColor"
                    android:fontFamily="@font/caveat"
                    android:text="Na meno :" />

                <TextView
                    android:id="@+id/orderName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/tabSelectedTextColor"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text=""
                    android:paddingEnd="5dp"
                    android:fontFamily="@font/caveat"
                    android:layout_gravity="bottom"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noteTextOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:textColor="@color/tabSelectedTextColor"
                    android:fontFamily="@font/caveat"
                    android:text="Poznámka pre nás:" />

                <TextView
                    android:id="@+id/infoOrder"
                    android:layout_width="match_parent"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/tabSelectedTextColor"
                    android:fontFamily="@font/caveat"
                    android:paddingEnd="5dp"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>