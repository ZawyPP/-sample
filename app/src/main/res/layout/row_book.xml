<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:alpha="0.2"
            app:srcCompat="@drawable/bookfood"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/listView"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="2dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:scrollbars="none" />

            <ScrollView
                android:id="@+id/book_scroll"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/booktitleScreen"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginVertical="20dp"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:fontFamily="@font/caveat"
                            android:textAlignment="center"
                            android:text="@string/bookFoodTitle"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:fontFamily="@font/caveat"
                            android:text="@string/bookFoodText"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/bookData"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:fontFamily="@font/caveat"
                            android:text="@string/kto"/>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/bTitle"
                                android:layout_weight="0.8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginBottom="5dp"
                                android:textSize="35dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/caveat"
                                android:text="" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/bAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginBottom="10dp"
                            style="@style/textFontFamilyBook"
                            android:visibility="gone"
                            android:text="" />

                        <ImageView
                            android:id="@+id/bImg1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/radius"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textSize="22dp"
                            android:fontFamily="@font/caveat"
                            android:text="@string/o"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/bQuestion1"
                                android:layout_weight="0.6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                style="@style/textFontFamilyBook"
                                android:text="" />


                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/caveat"
                            android:textSize="22dp"
                            android:text="@string/kde"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/bQuestion2"
                                android:layout_weight="0.6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                style="@style/textFontFamilyBook"
                                android:text="" />



                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bImg2"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginVertical="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/caveat"
                            android:textSize="22dp"
                            android:text="@string/ako"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/bQuestion3"
                                android:layout_weight="0.6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                style="@style/textFontFamilyBook"
                                android:text="" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bImg3"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="15dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/avatars" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            style="@style/textFontFamilyBook"
                            android:text="@string/pre_o"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/bQuestion4"
                                android:layout_weight="0.6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                style="@style/textFontFamilyBook"
                                android:text="" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bImg4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginVertical="5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/avatars" />

                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>