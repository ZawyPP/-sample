<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorAccent">

    <ViewFlipper
        android:id="@+id/viewFlipperReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/caveat_brush"
            android:textSize="20dp"
            android:text="@string/overujem" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/caveat_brush"
            android:textSize="20dp"
            android:text="@string/problem" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/caveat_brush"
            android:textSize="20dp"
            android:text="@string/no_free" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="15dp"
                    android:text="@string/count_reservation" />

                <TextView
                    android:id="@+id/user_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="14dp"
                    android:textAlignment="textEnd"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="20dp"
                    android:text="@string/reservation_name" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="20dp"
                    android:text="@string/reservation_phone" />
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reservationLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="20dp"
                    android:text="@string/reservation_count_user" />

                <TextView
                    android:id="@+id/many_seats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="24dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="8"
                android:background="@color/buttonReservationNetworkUnactive"
                android:progress="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <CheckBox
                    android:id="@+id/checkBoxSpecial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    app:buttonTint="@android:color/white"
                    android:text="VIAC MOŽNOSTÍ / UPRESNIŤ REZERVÁCIU " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/caveat_brush"
                    android:textSize="20dp"
                    android:text="@string/reservation_add_info" />

                <EditText
                    android:id="@+id/infoToOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:gravity="top"
                    android:background="@color/version"
                    android:fontFamily="@font/caveat_brush"
                    android:visibility="gone"
                    android:textSize="18dp"
                    android:hint="@string/reservation_add_info2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/cancelOrder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/button_selector3"
                    android:visibility="gone"
                    android:background="@android:color/transparent"/>
                <ImageButton
                    android:id="@+id/placeAnOrder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/button_selector2"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layButtonText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/caveat_brush"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="ZRUŠIŤ REZERVÁCIU"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/caveat_brush"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="UPRAVIŤ"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ViewFlipper>

</LinearLayout>